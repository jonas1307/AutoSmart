@model AutoSmart.Application.ViewModel.ClienteViewModel

@{
    ViewBag.Title = $"{(Model.Id == 0 ? "Cadastro" : "Alteração")} de Cliente";
    Layout = "../Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Salvar", "Clientes", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    if (Model.Id == 0)
    {
        @Html.HiddenFor(m => m.DataCriacao)
    }

    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CpfCnpj)
        @Html.TextBoxFor(m => m.CpfCnpj, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.CpfCnpj)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TelefoneContato)
        @Html.TextBoxFor(m => m.TelefoneContato, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.TelefoneContato)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    if (Model.Id != 0)
    {
        <div class="form-group">
            @Html.LabelFor(m => m.DataCriacao)
            @Html.TextBoxFor(m => m.DataCriacao, new { disabled = "disabled", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DataCriacao)
        </div>
    }

    <div class="form-group">
        <button class="btn btn-success" type="submit">Salvar</button>
        <a href="@Url.Action("Index", "Clientes")" class="btn btn-danger">Voltar</a>
    </div>
}